endif %}\n                            {%endif%}\n                        {% endfor %}\n                  \n                        {%if flag==\"No\"%}\n                            <td class=\"text-center\">{{j['designation']}}</td>\n                        {%endif%}\n                    \n                </tr>\n            </tbody>\n            <table style=\"line-height: 1em;width: 100%;font-size: 0.8em;\" border=\"0\" cellpadding=\"0\" cellspacing=\"0\">\n                <tbody>\n                    {%- for row in doc.authorized_signature-%}\n                        {% if row.grouping_of_designation==group_name and row.remarks != None and row.remarks !=\"\" %}\n                         <br><br>\n                            <tr><td>Remarks by :<br><br>\n                                {{row.emp_name}}: &nbsp;\n                                {{row.remarks}}<br><br>\n                        {% endif %}    \n                    {% endfor %}\n                </tr></tbody>\n            </table>\n        </table>\n        {%endif%}\n    {%endfor%}\n    \n    \n    <table style=\"line-height: 1em;width: 100%;font-size: 0.8em;\" border=\"0\" cellpadding=\"0\" cellspacing=\"0\">\n        <tbody>\n            <tr>\n                        {% set single_name=frappe.db.sql(\"\"\" select designation,grouping_of_designation, single_user  \n    from `tabRole Permission Tool Child`\n    where single_user=1 and parent=\"\"\"+workflow_name|string) %}\n    \n    {%for t in single_name%}\n        {%- for row in doc.authorized_signature-%}\n            {%- if row.designation ==t[0] -%}\n                            {%- if frappe.get_all(\"Employee\",{\"name\":row.emp_id},[\"signature\"])[0][\"signature\"] != None -%}\n                                <td class=\"text-center\"><img src=\"{{frappe.get_all(\"Employee\",{\"name\":row.emp_id},[\"signature\"])[0][\"signature\"]}}\" width=\"60\" height=\"100\" alt=\"no signature\"><br>{{row.emp_name}}<br>{{row.designation}}<br>Date: {{row.date_of_approval}}</td>\n                            {%- else -%}\n                                <td class=\"text-center\"><img src=\"\" height = 60 width = 95 alt=\"no signature\"><br>{{row.emp_name}}<br>{{row.designation}}<br>Date: {{row.date_of_approval}}</td>\n                            {%- endif -%}\n            {%- endif -%}\n        {%- endfor -%}    \n    {%endfor%} \n            </tr>\n        </tbody>\n    </table>\n    \n    \n    <table style=\"line-height: 1em;width: 100%;font-size: 0.8em;\" border=\"0\" cellpadding=\"0\" cellspacing=\"0\">\n        <tbody>\n        <tr>{% set single_name=frappe.db.sql(\"\"\" select designation,grouping_of_designation, single_user  \n    from `tabRole Permission Tool Child`\n    where single_user=1 and parent=\"\"\"+workflow_name|string) %}\n    \n    {%for t in single_name%}\n        {%- for row in doc.authorized_signature-%}\n            {%- if row.designation ==t[0] -%}\n            \n            <td style=\"width:50%;\">Remarks by {{t[0]}} <br><br>\n        \n        {%- if row.designation == t[0] and row.remarks != None and row.remarks !=\"\" -%}\n        {{row.emp_name}}: &nbsp;\n        {{row.remarks}}<br><br>\n        {%- endif -%}\n        </td>\n        {%- endif -%}\n        {%- endfor -%}    \n    {%endfor%} </tr></tbody>\n    </table>\n{%endif%}\n</div>\n\n\n\n\n\n\n\n\n<table style=\"line-height: 1em;width: 100%;font-size: 0.8em;\" border=\"1\" cellpadding=\"1\" cellspacing=\"1\">\n    <thead>\n        <tr><p style=\"font-size: 0.8em;\"><b>Refund Sheet Attachment:</b></p><br>\n            <th class=\"text-center\" style=\"width:2%; font-color: black;\">IP / UHID No.</th>\n            <th class=\"text-center\" style=\"width:2%;\">{{_(\"Download Link\")}}</th>\n            <th class=\"text-center\" style=\"width:96%;\">{{_(\"Attached Refund Sheet\")}}</th>\n        </tr>\n    </thead>\n    <tbody>\n        <tr>\n        {%- if doc.refund_sheet_attachment -%}\n         <td style=\"width:2%;\"> {{ doc.ip__uhid_